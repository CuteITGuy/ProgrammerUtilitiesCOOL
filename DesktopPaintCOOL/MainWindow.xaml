<Window x:Class="DesktopPaintCOOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}"
        Topmost="True" ShowInTaskbar="False">
    <Grid>
        <InkCanvas x:Name="inkCanvasMain"
                   UseCustomCursor="True" />
        
        <Rectangle x:Name="rectangle" Fill="Blue" Height="60" VerticalAlignment="Top" Visibility="Collapsed"
                   MouseLeave="Rectangle_OnMouseLeave"></Rectangle>
    </Grid>
</Window>